      "name": "getAccessToken",
      "description": "Returns access token.",
      "args": [
        {
        "name": "clientId",
        "type": "credentials",
        "info": "Your application's bitly client id.",
        "required": true
        },
        {
          "name": "clientSecret",
          "type": "credentials",
          "info": "Your application's bitly client secret.",
          "required": true
        },
        {
          "name": "code",
          "type": "credentials",
          "info": "The OAuth verification code acquired via OAuth's web authentication protocol.",
          "required": true
        },
        {
          "name": "redirectUri",
          "type": "String",
          "info": "The page to which a user was redirected upon successfully authenticating.",
          "required": true
        }
      ],
      "callbacks": [{
        "name": "error",
        "info": "Error"
      }, {
        "name": "success",
        "info": "Success"
      }]
    },
