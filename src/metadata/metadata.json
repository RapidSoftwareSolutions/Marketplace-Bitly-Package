      "name": "createUserBitlink",
      "description": "Saves a long URL as a Bitlink in a user's history, with optional pre-set metadata. (Also returns a short URL for that link.)",
      "args": [
        {
          "name": "accessToken",
          "type": "credentials",
          "info": "Your application's bitly client id.",
          "required": true
        },
        {
          "name": "longUrl",
